{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": true,
    "rootDir": "./",
    "baseUrl": "./",
    
    /* Bundler mode */
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "build",
    "sourceMap": true,
    "outDir": "build",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.test.tsx",
    "vite.config.ts"
  ]
}